/* an unbranched cable with a jump in diameter */

create soma, dend1, dend2

soma {
	L = 20
	nseg = 10
	diam = 20
}

dend1 {
	L = 2500
	nseg = 250
	diam = 1
}

dend2 {
	L = 2500
	nseg = 250
	diam = 1.5
}

soma connect dend1(0), 1
dend1 connect dend2(0), 1

define_shape()

synthetic = 1  /* needed for simulation */